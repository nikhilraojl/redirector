{
  "manifest_version": 2,
  "name": "ReDirector",
  "version": "1.2",
  "description": "Redirect URLs",
  "icons": {
    "48": "icons/redirector_48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*",
        "*://*.reddit.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["index.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["webRequest", "*://*.youtube.com/*"]
}
